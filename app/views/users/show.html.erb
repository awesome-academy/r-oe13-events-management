<div class="container">
  <div class="panel panel-default ">
    <div class="panel-heading">
      <h2><%= t ".profile" %></h2>
    </div>
    <div class="panel-body">
      <table class="table table-bordered table-striped table-hover">
        <tr>
          <td rowspan="7" class="col-md-4">
            <%= image_tag "#{@user.avatar}", class: "thumbnail img-responsive" %>
          </td>
        </tr>
        <tr>
          <td class="col-md-8">
            <div class="col-md-3">
              <h5><%= t ".name" %></h5>
            </div>
            <div class="col-md-9">
              <h5><%=  @user.name %></h5>
            </div>
          </td>
        </tr>
        <tr>
          <td class="col-md-8">
            <div class="col-md-3">
              <h5><%= t ".role" %></h5>
            </div>
            <div class="col-md-9">
              <h5><%=  @user.role_name %></h5>
            </div>
          </td>
        </tr>
        <tr>
          <td class="col-md-8">
            <div class="col-md-3">
              <h5><%= t ".email" %></h5>
            </div>
            <div class="col-md-9">
              <h5><%=  @user.email %></h5>
            </div>
          </td>
        </tr>
        <tr>
          <td class="col-md-8">
            <div class="col-md-3">
              <h5><%= t ".phone_number" %></h5>
            </div>
            <div class="col-md-9">
              <h5><%=  @user.phone_number %></h5>
            </div>
          </td>
        </tr>
        <tr>
          <td class="col-md-8">
            <div class="col-md-3">
              <h5><%= t ".address" %></h5>
            </div>
            <div class="col-md-9">
              <h5><%=  @user.address %></h5>
            </div>
          </td>
        </tr>
        <tr>
          <td class="col-md-8">
            <div class="col-md-3">
              <h5><%= t ".created_at" %></h5>
            </div>
            <div class="col-md-9">
              <h5><%=  @user.created_at %></h5>
            </div>
          </td>
        </tr>
      </table>
      <%= link_to t(".back"), :back, class: "btn btn-default pull-right" %>
    </div>
  </div>
</div>
