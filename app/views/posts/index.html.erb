<div id="owl-carousel-1" class="owl-carousel owl-theme center-owl-nav">
  <% @posts.each do |post|%>
    <article class="article thumb-article">
      <div class="article-img article-img-slide">
        <%= image_tag post.thumbnail.to_s, alt:"" %>
      </div>
      <div class="article-body">
        <ul class="article-info">
          <li class="article-category"><a href="#"><%= t ".new" %></a></li>
          <li class="article-type"><i class="fa fa-camera"></i></li>
        </ul>
        <h2 class="article-title"><a href="#"><%= post.title %></a></h2>
        <ul class="article-meta">
          <li><i class="fa fa-clock-o"></i><%= post.created_at %></li>
        </ul>
      </div>
    </article>
  <% end %>
</div>
<div class="search-container">
  <%= search_form_for @q do |s| %>
    <%= s.search_field :title_or_body_cont, class: "input-search" %>
    <%= s.submit class: "submit-search" %>
  <% end %>
</div>
<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="section-title">
          <h2 class="title"><%= t ".posts" %></h2>
          <ul class="tab-nav pull-right">
            <li class="active"><%= link_to t(".all"), "#tab1", data:{toggle:"tab"} %></li>
            <li><%= link_to t(".posts"), "#tab1", data:{toggle:"tab"} %></li>
            <li><%= link_to t(".event"), "#tab1", data:{toggle:"tab"} %></li>
            <li><%= link_to t(".donate"), "#tab1", data:{toggle:"tab"} %></li>
          </ul>
        </div>
        <div class="tab-content">
          <div id="tab1" class="tab-pane fade in active">
            <div class="row">
              <% @posts.each do |post| %>
                <div class="col-md-3 col-sm-6">
                  <article class="article">
                    <div class="article-img article-img-post">
                      <%= image_tag post.thumbnail.url.to_s, alt:"" if post.thumbnail.present? %>
                      <ul class="article-info">
                        <li class="article-type"><i class="fa fa-camera"></i></li>
                      </ul>
                    </div>
                    <div class="article-body">
                      <h4 class="article-title"><%= link_to post.title, post_path(post)%></h4>
                      <ul class="article-meta">
                        <li><i class="fa fa-clock-o"></i><%= post.created_at%></li>
                        <li><i class="fa fa-comments"></i><%= post.comments.count %></li>
                      </ul>
                    </div>
                  </article>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <%= render "layouts/sidebar" %>
    </div>
  </div>
</div>
