<div class="col-md-6 col-md-offset-3">
  <div class="new-form">
    <%= form_for([:organizer, @post], html: {multipart: true}) do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
      <div class="form-group">
        <%= f.label :content %><span class="red-title"> *</span></label>
        <%= f.text_area :body, minlength: Settings.min_length_text, required: true, class: "form-control ckeditor", id: "ckeditor"%>
      </div>
      <div class="form-group">
        <%= f.label :thumbnail %><br/>
        <%= f.file_field :thumbnail, class: "upload-image" %>
      </div>
      <div>
        <%= f.select :event_id do %>
          <% @events.each do |c| -%>
            <%= content_tag :option, c.name, value: c.id %>
          <% end %>
        <% end %>
      </div> <br>
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
