<div class="visible-lg visible-md">
  <%= image_tag("ad-3.jpg", alt:"", class:"center-block") %>
</div>

<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="section-title">
          <h2 class="title"><%= t ".event_new" %></h2>
        </div>

        <div id="owl-carousel-2" class="owl-carousel owl-theme">
          <% @event_new.each do |event_new| %>
            <article class="article thumb-article">
              <div class="article-img">
                <%= image_tag(event_new.banner.url, alt:"") %>
              </div>
              <div class="article-body">
                <ul class="article-info">
                  <li class="article-category">
                    <%= link_to t(".event"), organizer_event_path(event_new) %>
                  </li>
                  <li class="article-type"><i class="fa fa-eye"></i></li>
                </ul>
                <h3 class="article-title">
                  <%= link_to event_new.name, organizer_event_path(event_new) %>
                </h3>
                <ul class="article-meta">
                  <li><i class="fa fa-clock-o"></i><%= event_new.start_date %></li>
                  <li><i class="fa fa-comments"></i> 33</li>
                </ul>
              </div>
            </article>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="section-title">
          <h2 class="title"><%= t ".all_event" %></h2>
        </div>
        <div id="all-events">
          <%= render partial:"organizer/events/all_event", collection: @events, as: :event %>
        </div>
        <div class="text-center" id="paginator">
          <%= paginate @events, remote: true, theme: "twitter-bootstrap-3" %>
        </div>
      </div>
    </div>
  </div>
</div>
