<div id="owl-carousel-1" class="owl-carousel owl-theme center-owl-nav">
  <% @events.each do |event| %>
    <article class="article thumb-article">
      <div class="article-img-slide">
        <%= image_tag(event.banner.url, alt:"") %>
      </div>
      <div class="article-body">
        <ul class="article-info">
          <li class="article-category"><a href="#">Sự kiện</a></li>
          <li class="article-type"><i class="fa fa-camera"></i></li>
        </ul>
        <h2 class="article-title"><a href="#"><%= event.name %></a></h2>
        <ul class="article-meta">
          <li><i class="fa fa-clock-o"></i> <%= event.start_date %></li>
          <% if Time.current > event.end_date %>
            <li><i class="fa fa-clock-o"></i> Kết thúc</li>
          <% else %>
            <% if time_ago_in_words(event.start_date).to_i > 0 %>
              <li><i class="fa fa-clock-o"></i> <%= time_ago_in_words(event.start_date) %> đang diễn ra</li>
            <% elsif time_ago_in_words(event.start_date).to_i == 0 %>
              <li><i class="fa fa-clock-o"></i> đang bắt đầu</li>
            <% end %>
          <% end %>
          <li><i class="fa fa-comments"></i> 33</li>
        </ul>
      </div>
    </article>
  <% end %>
</div>

